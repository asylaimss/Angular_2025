{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",

  "index": "/index.html",

  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },

    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/icons/**",
          "/**/*.png",
          "/**/*.jpg",
          "/**/*.jpeg",
          "/**/*.svg",
          "/**/*.webp"
        ]
      }
    }
  ],

  "dataGroups": [
    {
      "name": "products-api",
      "urls": [
        "https://dummyjson.com/products",
        "https://dummyjson.com/products/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 50,
        "maxAge": "1d",
        "timeout": "5s"
      }
    },
    {
      "name": "firebase-firestore",
      "urls": [
        "https://firestore.googleapis.com/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 100,
        "maxAge": "1h",
        "timeout": "10s"
      }
    }
  ]
}