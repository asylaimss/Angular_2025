{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": false,
    "module": "ES2022",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@services/*": ["app/services/*"],
      "@pages/*": ["app/pages/*"],
      "@components/*": ["app/components/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./out-tsc/app",
    "types": []
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
